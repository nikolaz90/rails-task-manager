<section>
  <h2>Create a new task:</h2>
  <%= form_with(model: @task, url: tasks_create_path) do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :details %>
    <%= form.text_field :details %>
    <%= form.label :completed %>
    <%= form.check_box :completed%>
    <%= form.submit %>
  <% end %>
</section>
